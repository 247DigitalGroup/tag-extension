@import 'progress-bar'

html, body
	margin 0
	padding 0
	width 400px
	height 100px

.hide
	display none
	
#error
	background-color #f31a40
	padding 10px 10px 20px 10px
	text-align center
	> h1.code
		color white
		margin 0
		font-size 60px
		line-height 60px
	> p.description
		color white
		margin 0
		
.buttons
	z-index 100000
	position fixed
	top 0
	right 0
	left 0
	background-color rgba(#fff, .95)
	border-bottom 1px solid #ddd
	box-shadow 0 1px 10px 0 rgba(#000, .15)
	padding 10px
	text-align center
	
#login-form
	margin-top 38px
	background-color #eee
	padding 10px
	text-align center
	p.status
		color #39c
		font-size 11px
		margin 2px 0
	input
		margin-bottom 5px
	button
		margin-top 5px