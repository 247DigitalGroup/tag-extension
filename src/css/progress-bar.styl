progress-width = 100%
progress-height = 3px

color = #6c6c6c
color-bg = #f5f7f9
color-progress-bg = #e5e9eb
color-green = #4cd964
color-turquoise = #5ac8fa
color-blue = #007aff
color-light-blue = #34aadc
color-purple = #5856d6
color-red = #ff2d55

.progress
  background-color color-progress-bg
  height progress-height
  position relative
  width progress-width
  
.progress-bar
  animation-duration 3s
  animation-name width
  background-image linear-gradient(to right, color-green, color-turquoise, color-blue, color-light-blue, color-purple, color-red)
  background-size progress-width progress-height
  height 100%
  position relative
  
.progress-shadow
  background-image linear-gradient(to bottom, #eaecee, transparent)
  height 4em
  position absolute
  top 100%
  transform skew(45deg)
  transform-origin 0 0
  width 100%

@keyframes width
  0%, 100%
    transition-timing-function cubic-bezier(1, 0, 0.65, 0.85)
  0%
    width 0
  100%
    width 100%